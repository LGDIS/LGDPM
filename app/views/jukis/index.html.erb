<h2>住基情報取込</h2>

<%= form_tag({:action => :import}, {:multipart => true}) do %>
<div class="splitcontent" style="width: 70%;">
  <div class="splitcontentleft">
    <p>
      <%= file_field "document", "file" %>
    </p>
    <p>
      取込処理履歴一覧
    </p>
  </div>
  <div class="splitcontentright">
    <p>
      <%= submit_tag "取込" %>
    </p>
    <p>
      <%= will_paginate @juki_histories, :previous_label => "前 &lt;&lt; ",
      :next_label => " &gt;&gt; 次", :page_links => false,
      :link_separator => "#{page_entries_info @juki_histories}",
      :container => false %>
    </p>
  </div>
</div>
<% end %>

<table class="list issues" style="width: 50%;">
  <thead>
    <tr>
      <th style="text-align: center;">取込年月日</th>
      <th style="text-align: center;">取込件数</th>
      <th style="text-align: center;">取込担当者</th>
      <th style="text-align: center;">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @juki_histories.each do |juki_history| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td style="text-align: center;"><%= juki_history.created_at.strftime("%y/%m/%d %H:%M:%S") if juki_history.created_at.present? %></td>
      <td style="text-align: right;"> 　<%= juki_history.number %></td>
      <td style="text-align: center;"><%= juki_history.created_by %></td>
      <td style="text-align: center;"><%= @juki_history_const["status"]["#{juki_history.status}"] %></td>
    </tr>
    <% end if @juki_histories.present? %>
  </tbody>
</table>
