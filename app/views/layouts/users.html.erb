<!DOCTYPE html>
<html>
  <head>
    <title><%= I18n.t("label_title") %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <div id="wrapper2">
        <div id="top-menu"></div>
        <div id="header">
          <h1 class="login"><%= I18n.t("label_title") %></h1>
          <div id="quick-search"></div>
          <div id="main-menu"></div>
        </div>
        <div id="main" class="nosidebar">
        <% if @run_mode_announce.present? %>
          <div style="background: red; padding: 3px;">
            <%= @run_mode_announce %>
          </div>
        <% end %>
          <div id="sidebar"></div>
          <div id="content">
            <% if alert %>
              <div class="flash error"><%= alert %></div>
            <% end %>
            <% if notice %>
              <div class="flash notice"><%= notice %></div>
            <% end %>
            <%= yield %>
            <div class="footer">
              <%= SETTINGS["version"] %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
